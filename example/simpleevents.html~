<head>
<title>Simple events</title>
<script src="../src/muu2dbase.js"></script>
<script src="../src/muu2dshapes.js"></script>
</head>

<body>
<canvas id="canvas" width="600" height="600">

</canvas>

<script>
resize = 1;
window.onload = function(){
	var layer = muu.addCanvas("canvas", false);
	var square0 = new Rect(100,100).moveTo(50,50);	
	square0.stroke("rgb(0,255,0)");
	square0.fill("rgba(220,235,220, 0.5)");

	var square1 = new Rect(100,50).moveTo(50,25);	
	square1.stroke("rgb(255,0,0)");
	square1.fill("rgba(255,240,240, 0.5)");
	var square2 = new Rect(50,100).moveTo(25,50);
	square2.stroke("rgb(0,0,255)");
	square2.fill("rgba(240,240,255, 0.5)");

	var circle = new Circle;
	circle.stroke("rgb(200,200,10)");
	circle.fill("rgb(240,240,100)")
	circle.moveTo(0,100);

	layer.moveTo(100,100);

	function scale(ev, obj){
		var s = obj.scale();
		if(s>2) return;
		obj.scale(s+0.1)
		layer.render();
		setTimeout(function(){scale(ev,obj)}, 50);
	}
	layer.add(square0).add(square1).add(square2).add(circle);

	square0.event(["mousedown"], scale);
	square1.event(["mouseup"], scale);
	square2.event(["mousemove"], scale);
	circle.event(["mousedown"], scale);
	
	muu.renderAll();
}
</script>
</body>
